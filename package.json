{
  "name": "vite-react-typescript-starter",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:worker": "wrangler dev",
    "build": "vite build",
    "deploy:worker": "wrangler deploy",
    "db:migrate": "wrangler d1 execute roiblueprint --file=./schema.sql",
    "db:migrate:staging": "wrangler d1 execute roiblueprint-staging --file=./schema.sql --env staging",
    "secrets:setup": "echo 'Run: wrangler secret put CENTRALREACH_API_KEY && wrangler secret put QUICKBOOKS_CLIENT_ID && wrangler secret put JWT_SECRET'",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:worker": "vitest run --config vitest.worker.config.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview"
  },
  "dependencies": {
    "hono": "^4.6.10",
    "lucide-react": "^0.469.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@tanstack/react-query": "^5.85.5",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "@types/react-window": "^1.8.8",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.31",
    "react-window": "^1.8.11",
    "react-window-infinite-loader": "^1.0.10",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.3.0",
    "vite": "^7.3.0",
    "vitest": "^3.2.4",
    "wrangler": "^4.54.0"
  }
}
